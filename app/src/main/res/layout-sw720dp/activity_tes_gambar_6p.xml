<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#847975"
    tools:context="efpappstudy.teslogikapengetahuan.tes_gambar_6p">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tes Logika (Gambar)"
        android:id="@+id/txt11"
        android:textStyle="bold"
        android:textSize="50dp"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="10dp"
        android:textColor="#0df7b9"
        android:layout_above="@+id/relativeLayout" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bgapk"
        android:layout_below="@+id/home11"
        android:id="@+id/relativeLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="790dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:id="@+id/tg6pg"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="165dp"
            android:layout_height="115dp"
            android:id="@+id/butA"
            android:layout_marginBottom="160dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_alignBottom="@+id/tg6pg"
            android:layout_alignLeft="@+id/tg6pg"
            android:layout_alignStart="@+id/tg6pg"
            android:background="#00ffffff" />

        <Button
            android:layout_width="165dp"
            android:layout_height="115dp"
            android:id="@+id/butB"
            android:layout_alignTop="@+id/butA"
            android:layout_centerHorizontal="true"
            android:background="#00ffffff" />

        <Button
            android:layout_width="165dp"
            android:layout_height="115dp"
            android:id="@+id/butC"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_alignTop="@+id/butB"
            android:layout_toRightOf="@+id/butB"
            android:layout_toEndOf="@+id/butB"
            android:background="#00ffffff" />

        <Button
            android:layout_width="165dp"
            android:layout_height="115dp"
            android:id="@+id/butD"
            android:layout_below="@+id/butB"
            android:layout_alignLeft="@+id/butA"
            android:layout_alignStart="@+id/butA"
            android:layout_marginTop="20dp"
            android:background="#00ffffff" />

        <Button
            android:layout_width="165dp"
            android:layout_height="115dp"
            android:id="@+id/butE"
            android:layout_alignTop="@+id/butD"
            android:layout_alignLeft="@+id/butB"
            android:layout_alignStart="@+id/butB"
            android:background="#00ffffff" />

        <Button
            android:layout_width="165dp"
            android:layout_height="115dp"
            android:id="@+id/butF"
            android:layout_alignTop="@+id/butE"
            android:layout_alignLeft="@+id/butC"
            android:layout_alignStart="@+id/butC"
            android:background="#00ffffff" />

        <ImageView
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:id="@+id/imgtruefalse2"
            android:layout_marginRight="114dp"
            android:visibility="invisible"
            android:layout_alignTop="@+id/tg6pg"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/25"
            android:id="@+id/txtsoalke2"
            android:textSize="60dp"
            android:textColor="#45ab0e"
            android:layout_marginLeft="26dp"
            android:layout_alignBottom="@+id/imgtruefalse2"
            android:layout_alignLeft="@+id/tg6pg"
            android:layout_alignStart="@+id/tg6pg" />


    </RelativeLayout>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/home"
        android:id="@+id/home11"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        />

</RelativeLayout>
