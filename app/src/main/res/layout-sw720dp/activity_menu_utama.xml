<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/covers"
    tools:context="efpappstudy.teslogikapengetahuan.menu_utama">


    <Button
        android:layout_width="650dp"
        android:layout_height="140dp"
        android:background="@drawable/tlogika"
        android:id="@+id/kuis_logika"
        android:layout_alignLeft="@+id/tebak_tebakan"
        android:layout_alignStart="@+id/tebak_tebakan"
        android:layout_marginTop="350dp" />

    <Button
        android:layout_width="650dp"
        android:layout_height="140dp"
        android:background="@drawable/tpengetahuan"
        android:layout_marginTop="30dp"
        android:id="@+id/tebak_tebakan"
        android:textColor="#0d34f7"
        android:layout_below="@+id/kuis_logika"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/ratebtn"
        android:layout_marginLeft="57dp"
        android:background="@drawable/buttonfavorit"
        android:layout_alignTop="@+id/soundbtn"
        android:layout_toRightOf="@+id/soundbtn"
        android:layout_toEndOf="@+id/soundbtn" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/aboutbtn"
        android:layout_marginTop="22dp"
        android:background="@drawable/buttontentang"
        android:layout_alignRight="@+id/tebak_tebakan"
        android:layout_alignEnd="@+id/tebak_tebakan"
        android:layout_below="@+id/tebak_tebakan" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textSize="36dp"
        android:text="mini text"
        android:textColor="#000000"
        android:id="@+id/keterangan"
        android:layout_below="@+id/ratebtn"
        android:layout_centerHorizontal="true" />

    <ToggleButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/check_toogle"
        android:onClick="onToogleClickeds"
        android:id="@+id/soundbtn"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/tebak_tebakan"
        android:layout_alignLeft="@+id/tebak_tebakan"
        android:layout_alignStart="@+id/tebak_tebakan" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="57dp"
        android:background="@drawable/btnshare"
        android:id="@+id/shared"
        android:layout_above="@+id/keterangan"
        android:layout_toRightOf="@+id/ratebtn"
        android:layout_toEndOf="@+id/ratebtn" />

</RelativeLayout>
