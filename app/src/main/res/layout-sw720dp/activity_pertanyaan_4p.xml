<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#847975"
    tools:context="efpappstudy.teslogikapengetahuan.pertanyaan_4p">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tes Logika (Pertanyaan)"
        android:id="@+id/txt111"
        android:textStyle="bold"
        android:textSize="50dp"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="10dp"
        android:textColor="#0df7b9"
        android:layout_above="@+id/relativeLayout" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bgapk"
        android:layout_below="@+id/home111"
        android:id="@+id/relativeLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:id="@+id/tg4pg"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="120dp"
            android:layout_height="115dp"
            android:id="@+id/btn3A"
            android:layout_marginTop="20dp"
            android:background="@drawable/btna"
            android:layout_marginLeft="32dp"
            android:layout_below="@+id/tg4pg"
            android:layout_alignLeft="@+id/tg4pg"
            android:layout_alignStart="@+id/tg4pg" />

        <Button
            android:layout_width="120dp"
            android:layout_height="115dp"
            android:background="@drawable/btnb"
            android:layout_marginLeft="50dp"
            android:id="@+id/btn3B"
            android:layout_alignTop="@+id/btn3A"
            android:layout_toRightOf="@+id/btn3A"
            android:layout_toEndOf="@+id/btn3A" />

        <Button
            android:layout_width="120dp"
            android:layout_height="115dp"
            android:background="@drawable/btnc"
            android:layout_marginLeft="50dp"
            android:id="@+id/btn3C"
            android:layout_alignTop="@+id/btn3B"
            android:layout_toRightOf="@+id/btn3B"
            android:layout_toEndOf="@+id/btn3B" />

        <Button
            android:layout_width="120dp"
            android:layout_height="115dp"
            android:background="@drawable/btnd"
            android:id="@+id/btn3D"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/tg4pg"
            android:layout_toRightOf="@+id/btn3C"
            android:layout_toEndOf="@+id/btn3C" />

        <ImageView
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:id="@+id/imgtruefalse1"
            android:layout_marginRight="80dp"
            android:visibility="invisible"
            android:layout_alignTop="@+id/tg4pg"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/25"
            android:id="@+id/txtsoalke1"
            android:textSize="60dp"
            android:textColor="#45ab0e"
            android:layout_marginLeft="40dp"
            android:layout_alignBottom="@+id/imgtruefalse1"
            android:layout_alignLeft="@+id/tg4pg"
            android:layout_alignStart="@+id/tg4pg" />


    </RelativeLayout>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/home"
        android:id="@+id/home111"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        />

</RelativeLayout>
