<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#847975"
    tools:context="efpappstudy.teslogikapengetahuan.tebak_kata_3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tes Pengetahuan (Level 3)"
        android:id="@+id/textView333"
        android:textSize="12dp"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="3dp"
        android:textStyle="bold"
        android:textColor="#0df7b9"
        android:layout_above="@+id/layouttebakkata3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/home"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:id="@+id/home_3"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bgapk"
        android:id="@+id/layouttebakkata3"
        android:layout_below="@+id/home_3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/soalimg3"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bgquest"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="2dp"
            android:textSize="8dp"
            android:text="Pertanyaannya"
            android:id="@+id/question3"
            android:layout_alignRight="@+id/soalimg3"
            android:layout_alignEnd="@+id/soalimg3"
            android:layout_alignLeft="@+id/soalimg3"
            android:layout_alignStart="@+id/soalimg3"
            android:layout_below="@+id/timertxt3"
            android:textAlignment="center"
            android:textColor="#000000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/jawabTxt3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:textColor="#065bf8"
            android:textSize="4dp"
            android:inputType="textCapWords"
            android:textAlignment="center" />

        <Button
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:id="@+id/jawabBtn3"
            android:layout_marginBottom="35dp"
            android:background="@drawable/btn_jawab"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Huruf"
            android:textSize="10dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/hurufTxt3"
            android:layout_above="@+id/jawabTxt3"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/benarsalahimg3"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="8dp"
            android:id="@+id/timertxt3"
            android:layout_marginTop="3dp"
            android:textColor="#fb0a3a"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignTop="@+id/soalimg3"
            android:layout_alignRight="@+id/soalimg3"
            android:layout_alignEnd="@+id/soalimg3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/10"
            android:textSize="8dp"
            android:id="@+id/persoalan3"
            android:layout_alignBottom="@+id/timertxt3"
            android:layout_alignLeft="@+id/soalimg3"
            android:layout_alignStart="@+id/soalimg3"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_alignTop="@+id/timertxt3"
            android:textColor="#45ab0e" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:id="@+id/rldone3"
            android:background="#a2000000"
            android:layout_centerHorizontal="true"
            android:visibility="invisible">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:id="@+id/imageView_3"
                android:layout_alignParentTop="true"
                android:background="@drawable/tropi"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELAMAT! SILAHKAN TEKAN 'LANJUT' UNTUK MEMBUKA LEVEL BERIKUTNYA"
                android:id="@+id/txtSelamat3"
                android:textSize="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/imageView_3"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:background="@drawable/lanjut"
                android:id="@+id/okbtn3"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/txtSelamat3"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </RelativeLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        />

</RelativeLayout>
