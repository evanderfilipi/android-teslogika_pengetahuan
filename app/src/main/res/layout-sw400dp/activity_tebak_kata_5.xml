<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#847975"
    tools:context="efpappstudy.teslogikapengetahuan.tebak_kata_5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tes Pengetahuan (Level 5)"
        android:id="@+id/textView33333"
        android:textSize="28dp"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textColor="#0df7b9"
        android:layout_above="@+id/layouttebakkata5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/home"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:id="@+id/home_5"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bgapk"
        android:id="@+id/layouttebakkata5"
        android:layout_below="@+id/home_5">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:id="@+id/soalimg5"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/bgquest"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="25dp"
            android:textSize="30dp"
            android:text="Pertanyaannya"
            android:id="@+id/question5"
            android:layout_alignRight="@+id/soalimg5"
            android:layout_alignEnd="@+id/soalimg5"
            android:layout_alignLeft="@+id/soalimg5"
            android:layout_alignStart="@+id/soalimg5"
            android:layout_below="@+id/timertxt5"
            android:textAlignment="center"
            android:textColor="#000000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/jawabTxt5"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="180dp"
            android:textColor="#065bf8"
            android:textSize="28dp"
            android:inputType="textCapWords"
            android:textAlignment="center" />

        <Button
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:id="@+id/jawabBtn5"
            android:layout_marginBottom="100dp"
            android:background="@drawable/btn_jawab"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Huruf"
            android:textSize="28dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/hurufTxt5"
            android:layout_above="@+id/jawabTxt5"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:id="@+id/benarsalahimg5"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="28dp"
            android:id="@+id/timertxt5"
            android:layout_marginTop="12dp"
            android:textColor="#fb0a3a"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp"
            android:layout_alignTop="@+id/soalimg5"
            android:layout_alignRight="@+id/soalimg5"
            android:layout_alignEnd="@+id/soalimg5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/10"
            android:textSize="28dp"
            android:id="@+id/persoalan5"
            android:layout_alignBottom="@+id/timertxt5"
            android:layout_alignLeft="@+id/soalimg5"
            android:layout_alignStart="@+id/soalimg5"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_alignTop="@+id/timertxt5"
            android:textColor="#45ab0e" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:id="@+id/rldone5"
            android:background="#a2000000"
            android:layout_centerHorizontal="true"
            android:visibility="invisible">

            <ImageView
                android:layout_width="220dp"
                android:layout_height="240dp"
                android:id="@+id/imageView_5"
                android:layout_alignParentTop="true"
                android:background="@drawable/tropi"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELAMAT! SILAHKAN TEKAN 'LANJUT' UNTUK MEMBUKA LEVEL BERIKUTNYA"
                android:id="@+id/txtSelamat5"
                android:textSize="28dp"
                android:layout_marginTop="34dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/imageView_5"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="190dp"
                android:layout_height="70dp"
                android:background="@drawable/lanjut"
                android:id="@+id/okbtn5"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/txtSelamat5"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </RelativeLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        />

</RelativeLayout>
