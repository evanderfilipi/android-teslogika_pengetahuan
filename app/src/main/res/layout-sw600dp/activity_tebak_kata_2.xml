<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#847975"
    tools:context="efpappstudy.teslogikapengetahuan.tebak_kata_2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tes Pengetahuan (Level 2)"
        android:id="@+id/textView33"
        android:textSize="36dp"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textColor="#0df7b9"
        android:layout_above="@+id/layouttebakkata2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/home"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:id="@+id/home_2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bgapk"
        android:id="@+id/layouttebakkata2"
        android:layout_below="@+id/home_2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:id="@+id/soalimg2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/bgquest"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="220dp"
            android:layout_height="240dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="20dp"
            android:textSize="42dp"
            android:text="Pertanyaannya"
            android:id="@+id/question2"
            android:layout_alignRight="@+id/soalimg2"
            android:layout_alignEnd="@+id/soalimg2"
            android:layout_alignLeft="@+id/soalimg2"
            android:layout_alignStart="@+id/soalimg2"
            android:layout_below="@+id/timertxt2"
            android:textAlignment="center"
            android:textColor="#000000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/jawabTxt2"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="220dp"
            android:textColor="#065bf8"
            android:textSize="34dp"
            android:inputType="textCapWords"
            android:textAlignment="center" />

        <Button
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:id="@+id/jawabBtn2"
            android:layout_marginBottom="120dp"
            android:background="@drawable/btn_jawab"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Huruf"
            android:textSize="36dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/hurufTxt2"
            android:layout_above="@+id/jawabTxt2"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/benarsalahimg2"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="42dp"
            android:id="@+id/timertxt2"
            android:layout_marginTop="16dp"
            android:textColor="#fb0a3a"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:layout_alignTop="@+id/soalimg2"
            android:layout_alignRight="@+id/soalimg2"
            android:layout_alignEnd="@+id/soalimg2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/10"
            android:textSize="42dp"
            android:id="@+id/persoalan2"
            android:layout_alignBottom="@+id/timertxt2"
            android:layout_alignLeft="@+id/soalimg2"
            android:layout_alignStart="@+id/soalimg2"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_alignTop="@+id/timertxt2"
            android:textColor="#45ab0e" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:id="@+id/rldone2"
            android:background="#a2000000"
            android:layout_centerHorizontal="true"
            android:visibility="invisible">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="320dp"
                android:id="@+id/imageView_2"
                android:layout_alignParentTop="true"
                android:background="@drawable/tropi"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELAMAT! SILAHKAN TEKAN 'LANJUT' UNTUK MEMBUKA LEVEL BERIKUTNYA"
                android:id="@+id/txtSelamat2"
                android:textSize="36dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/imageView_2"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="220dp"
                android:layout_height="80dp"
                android:background="@drawable/lanjut"
                android:id="@+id/okbtn2"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/txtSelamat2"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </RelativeLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        />

</RelativeLayout>
