<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapk"
    tools:context="efpappstudy.teslogikapengetahuan.hasil_tl_pertanyaan">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HASIL AKHIR"
        android:textSize="44dp"
        android:id="@+id/txtjudulhasil2"
        android:textColor="#008000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BENAR"
        android:id="@+id/txtbenar2"
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_below="@+id/txtjudulhasil2"
        android:layout_alignLeft="@+id/txtjudulhasil2"
        android:layout_alignStart="@+id/txtjudulhasil2"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SALAH"
        android:id="@+id/txtsalah2"
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/txtbenar2"
        android:layout_alignRight="@+id/txtjudulhasil2"
        android:layout_alignEnd="@+id/txtjudulhasil2"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textSize="24dp"
        android:id="@+id/scorebenar2"
        android:textColor="#000000"
        android:layout_below="@+id/txtbenar2"
        android:layout_alignLeft="@+id/txtbenar2"
        android:layout_alignStart="@+id/txtbenar2"
        android:layout_alignRight="@+id/txtbenar2"
        android:layout_alignEnd="@+id/txtbenar2"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textSize="24dp"
        android:textColor="#000000"
        android:id="@+id/scoresalah2"
        android:layout_below="@+id/txtsalah2"
        android:layout_alignRight="@+id/txtsalah2"
        android:layout_alignEnd="@+id/txtsalah2"
        android:layout_alignLeft="@+id/txtsalah2"
        android:layout_alignStart="@+id/txtsalah2"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORE"
        android:id="@+id/txtscore2"
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/scorebenar2"
        android:layout_alignLeft="@+id/scorebenar2"
        android:layout_alignStart="@+id/scorebenar2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GRADE"
        android:id="@+id/txtgrade2"
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/txtscore2"
        android:layout_alignRight="@+id/scoresalah2"
        android:layout_alignEnd="@+id/scoresalah2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textSize="24dp"
        android:id="@+id/totalscore2"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_below="@+id/txtscore2"
        android:layout_alignLeft="@+id/txtscore2"
        android:layout_alignStart="@+id/txtscore2"
        android:layout_alignRight="@+id/txtscore2"
        android:layout_alignEnd="@+id/txtscore2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textSize="24dp"
        android:textColor="#000000"
        android:id="@+id/gradenya2"
        android:textAlignment="center"
        android:layout_below="@+id/txtgrade2"
        android:layout_alignRight="@+id/txtgrade2"
        android:layout_alignEnd="@+id/txtgrade2"
        android:layout_alignLeft="@+id/scoresalah2"
        android:layout_alignStart="@+id/scoresalah2" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:visibility="invisible"
        android:id="@+id/imgemot2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/totalscore2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORE TERTINGGI"
        android:id="@+id/txtscoretertinggi2"
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_below="@+id/imgemot2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textSize="24dp"
        android:id="@+id/scoretertinggi2"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_below="@+id/txtscoretertinggi2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/btnreset"
        android:id="@+id/resetbtn2"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="54dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/btnshare"
        android:id="@+id/sharebtn2"
        android:layout_marginRight="30dp"
        android:layout_alignTop="@+id/resetbtn2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/btnplay"
        android:layout_marginBottom="54dp"
        android:id="@+id/playbtn2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtket2"
        android:textSize="18dp"
        android:text="mini text"
        android:textColor="#000000"
        android:layout_marginBottom="2dp"
        android:layout_above="@+id/playbtn2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TES LOGIKA (PERTANYAAN)"
        android:textSize="22dp"
        android:id="@+id/teks2"
        android:layout_below="@+id/txtjudulhasil2"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textStyle="bold" />

</RelativeLayout>
