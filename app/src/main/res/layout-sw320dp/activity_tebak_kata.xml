<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".tebak_kata"
    android:background="#847975">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tes Pengetahuan (Level 1)"
        android:id="@+id/textView3"
        android:textSize="22dp"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textColor="#0df7b9"
        android:layout_above="@+id/layouttebakkata"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/home"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:id="@+id/home2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bgapk"
        android:id="@+id/layouttebakkata"
        android:layout_below="@+id/home2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/soalimg"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/bgquest"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:text="Pertanyaannya"
            android:id="@+id/question"
            android:layout_alignRight="@+id/soalimg"
            android:layout_alignEnd="@+id/soalimg"
            android:layout_alignLeft="@+id/soalimg"
            android:layout_alignStart="@+id/soalimg"
            android:layout_below="@+id/timertxt"
            android:textAlignment="center"
            android:textColor="#000000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/jawabTxt"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="120dp"
            android:textColor="#065bf8"
            android:textSize="20dp"
            android:inputType="textCapWords"
            android:textAlignment="center" />

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/jawabBtn"
            android:layout_marginBottom="56dp"
            android:background="@drawable/btn_jawab"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Huruf"
            android:textSize="24dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/hurufTxt"
            android:layout_above="@+id/jawabTxt"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/benarsalahimg"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="20dp"
            android:id="@+id/timertxt"
            android:layout_marginTop="12dp"
            android:textColor="#fb0a3a"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp"
            android:layout_alignTop="@+id/soalimg"
            android:layout_alignRight="@+id/soalimg"
            android:layout_alignEnd="@+id/soalimg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/10"
            android:textSize="20dp"
            android:id="@+id/persoalan"
            android:layout_alignBottom="@+id/timertxt"
            android:layout_alignLeft="@+id/soalimg"
            android:layout_alignStart="@+id/soalimg"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_alignTop="@+id/timertxt"
            android:textColor="#45ab0e" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:id="@+id/rldone1"
            android:layout_centerHorizontal="true"
            android:background="#a2000000"
            android:visibility="invisible">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:id="@+id/imageView"
                android:layout_alignParentTop="true"
                android:background="@drawable/tropi"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELAMAT! SILAHKAN TEKAN 'LANJUT' UNTUK MEMBUKA LEVEL BERIKUTNYA"
                android:id="@+id/txtSelamat"
                android:textSize="22dp"
                android:layout_marginTop="46dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:background="@drawable/lanjut"
                android:id="@+id/okbtn1"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/txtSelamat"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </RelativeLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        />

</RelativeLayout>
